To cite package 'rattle' in publications use:

  Graham Williams (2009). Rattle: A Data Mining GUI for R, Graham J
  Williams, The R Journal, 1(2):45-55. http://rattle.togaware.com

@article{RJournal:Williams:2009,
  author = {Graham J Williams},
  title = {{Rattle: A Data Mining GUI for R}},
  journal = {The R Journal},
  year = 2009,
  volume = 1,
  number = 2,
  pages = {45--55},
  month = {December},
  url = {http://journal.r-project.org/archive/2009-2/RJournal_2009-2_Williams.pdf}
}


